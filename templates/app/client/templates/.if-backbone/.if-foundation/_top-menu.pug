mixin top-menu(main_sel)
  .title-bar(data-responsive-toggle='main-nav' data-hide-for='medium')
    button.menu-icon(type='button' data-toggle)
    .title-bar-title Menu
  .top-bar
    .top-bar-left#main-nav
      ul.dropdown.menu.vertical.medium-horizontal(data-dropdown-menu)
        li.menu-text= title
        li.item(class=main_sel === 'home' ? 'active' : '')
          a(href='#') Home
        li.item(class=main_sel === 'about' ? 'active' : '')
          a(href='#/about') About
        li.item(class=main_sel === 'contact' ? 'active' : '')
          a(href='#/contact') Contact

