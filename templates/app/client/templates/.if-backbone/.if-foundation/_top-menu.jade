.top-bar
  .top-bar-title
    span(data-responsive-toggle="main-nav" data-hide-for="medium")
      button.menu-icon.dark(type="button" data-toggle)
    strong= title
  #main-nav
    .top-bar-left
      ul.dropdown.menu(data-dropdown-menu)
        li.item(class=main_sel === 'home' ? 'active' : '')
          a(href='#') Home
        li.item(class=main_sel === 'about' ? 'active' : '')
          a(href='#/about') About
        li.item(class=main_sel === 'contact' ? 'active' : '')
          a(href='#/contact') Contact


